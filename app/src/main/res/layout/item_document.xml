<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2.5dp"
    android:longClickable="true"
    android:id="@+id/docCard"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/docImageView"
            android:clickable="true"
            />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/downloadBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="@drawable/effect_ripple"
                        android:visibility="gone"
                        />
                <ImageView
                    android:id="@+id/shareBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_variant"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="@drawable/effect_ripple"
                    android:visibility="gone"
                    />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de documento"
            android:textSize="20sp"
            android:id="@+id/docTypeTV"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas de documento"
            android:id="@+id/docNotesTV"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>