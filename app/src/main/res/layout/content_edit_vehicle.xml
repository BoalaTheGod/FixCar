<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditVehicleActivity"
    tools:showIn="@layout/activity_edit_vehicle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingTop="2.5dp"
            android:animateLayoutChanges="true"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Informacion del vehiculo"
                        android:textSize="20dp"
                        android:textColor="?colorAccent"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/marca"
                        android:hint="marca"
                        android:background="@color/transparent"
                        android:layout_margin="7dp"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/modelo"
                        android:hint="modelo"
                        android:background="@color/transparent"
                        android:layout_margin="7dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/car_back"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/matricula"
                            android:hint="matricula"
                            android:background="@color/transparent"
                            android:layout_margin="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/engine"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/motor"
                            android:hint="motor"
                            android:background="@color/transparent"
                            android:layout_margin="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/counter"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/kilometraje"
                            android:hint="kilometraje"
                            android:inputType="number"
                            android:background="@color/transparent"
                            android:layout_margin="5dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Recordatorios"
                        android:textSize="20dp"
                        android:textColor="?colorAccent"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:animateLayoutChanges="true"
                        android:longClickable="true"
                        android:id="@+id/ensuranceLayout"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/shield_car"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:animateLayoutChanges="true"
                            >
                        <EditText
                            android:id="@+id/seguro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true"
                            android:maxLines="1"
                            android:hint="Fecha de renovacion del seguro"
                            android:background="@color/transparent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="@drawable/effect_ripple"
                                android:id="@+id/ensurancePH"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Renovacion del seguro"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus"
                                    />
                            </LinearLayout>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/insuranceNote"
                                android:hint="Notas"
                                android:background="@color/transparent"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:animateLayoutChanges="true"
                        android:longClickable="true"
                        android:id="@+id/itvLayout"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_logo_itv"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:animateLayoutChanges="true"
                            >
                        <EditText
                            android:id="@+id/fechaItv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true"
                            android:maxLines="1"
                            android:hint="Fecha de la ITV"
                            android:background="@color/transparent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="@drawable/effect_ripple"
                                android:id="@+id/itvPH"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Pasar la ITV"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus"
                                    />
                            </LinearLayout>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/itvNote"
                                android:hint="Notas"
                                android:background="@color/transparent"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:animateLayoutChanges="true"
                        android:longClickable="true"
                        android:id="@+id/tiresLayout"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/car_tire_alert"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:animateLayoutChanges="true"
                            >
                        <EditText
                            android:id="@+id/fechaNeumaticos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true"
                            android:maxLines="1"
                            android:hint="Fecha del cambio de neumaticos"
                            android:background="@color/transparent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="@drawable/effect_ripple"
                                android:id="@+id/tiresPH"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Cambio de neumaticos"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus"
                                    />
                            </LinearLayout>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tiresNote"
                                android:hint="Notas"
                                android:background="@color/transparent"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:animateLayoutChanges="true"
                        android:longClickable="true"
                        android:id="@+id/oilLayout"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/oil"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:animateLayoutChanges="true"
                            >
                        <EditText
                            android:id="@+id/fechaAceite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true"
                            android:maxLines="1"
                            android:hint="Fecha del cambio de aceite"
                            android:background="@color/transparent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="@drawable/effect_ripple"
                                android:id="@+id/oilPH"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Cambio de aceite"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus"
                                    />
                            </LinearLayout>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/oilNote"
                                android:hint="Notas"
                                android:background="@color/transparent"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                />

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:animateLayoutChanges="true"
                        android:longClickable="true"
                        android:id="@+id/revisionLayout"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/car_cog"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="2dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:animateLayoutChanges="true"
                            >
                        <EditText
                            android:id="@+id/fechaRevision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true"
                            android:maxLines="1"
                            android:hint="Fecha de la revision del vehiculo"
                            android:background="@color/transparent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="@drawable/effect_ripple"
                                android:id="@+id/revisionPH"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Revisión"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus"
                                    />
                            </LinearLayout>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/reviewNote"
                                android:hint="Notas"
                                android:background="@color/transparent"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/docsRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2.5dp"
                android:id="@+id/addDocCard"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_plus"
                            android:adjustViewBounds="true"
                            android:background="#BABABA"
                            android:id="@+id/addDocIMG"
                            android:clickable="true"
                            />
                    </androidx.cardview.widget.CardView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de documento"
                        android:textSize="20sp"
                        android:id="@+id/docTypeET"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Notas de documento"
                        android:id="@+id/docNotesET"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/delButtonTint"
            android:id="@+id/addDocBT"
            android:drawableLeft="@drawable/plus"
            android:text="Añadir documento"
             />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/delButtonTint"
            android:id="@+id/delVehicle"
            android:drawableLeft="@drawable/delete_empty"
            android:text="@string/del_vehicle"
            android:textColor="#CA3535" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
