<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardEx"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/LLCard"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="156dp"
                    android:layout_height="86dp"

                    >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/download"

                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAlignment="textStart"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="20sp"
                        android:text="marca"
                        android:id="@+id/marca"
                        android:textColor="@color/textDeffault"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAlignment="textStart"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="20sp"
                        android:text="modelo"
                        android:id="@+id/modelo"
                        android:textColor="@color/textDeffault"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/expandableTab"
            android:animateLayoutChanges="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/car_back"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="matricula"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="matricula"
                    android:id="@+id/matricula"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/engine"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="motor"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="motor"
                    android:id="@+id/motor"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/counter"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="kilometraje"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="kilometraje"
                    android:id="@+id/kilometraje"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logo_itv"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/itvIcon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="itv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="fecha itv"
                    android:id="@+id/itv"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/car_tire_alert"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/neumaticosIcon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="cambio de neumaticos"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="neumaticos"
                    android:id="@+id/neumaticos"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/oil"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/aceiteIcon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="cambio de aceite"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="aceite"
                    android:id="@+id/aceite"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shield_car"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/ensuranceIcon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="Seguro"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="aceite"
                    android:id="@+id/ensurance"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/car_cog"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/revisionIcon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:text="revision"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:text="revision"
                    android:id="@+id/revision"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>